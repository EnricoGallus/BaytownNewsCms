<nav class="navbar navbar-expand-lg navbar-light bg-light">
  <%= link_to root_path, class: "navbar-brand" do %>
    <%= image_tag("baytown_news_logo.jpeg", alt: "幕張ベイタウンニュース", width: 30, height: 24) %>
  <% end %>

  <!-- Left side of the navbar -->
  <div class="collapse navbar-collapse" id="navbarNav">
    <ul class="navbar-nav">
      <li class="nav-item active">
        <%= link_to t('navbar.menu.news'), news_path(locale: locale), class: 'nav-link' %>
      </li>
      <li class="nav-item">
        <%= link_to t('navbar.menu.archive'), archive_path(locale: locale), class: 'nav-link' %>
      </li>
    </ul>
  </div>

  <ul class="navbar-nav me-auto mb-2 mb-lg-0">
    <li class="nav-item dropstart">
      <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
        <%= t('navbar.language') %>
      </a>
      <ul class="dropdown-menu">
        <%= form_tag(url_for(locale: params[:locale]), method: :get) do %>
          <% available_locales.each do |locale| %>
            <li><%= link_to t("languages.#{locale}"), { locale: locale }, class: 'dropdown-item', method: :get %></li>
          <% end %>
        <% end %>
      </ul>
    </li>
  </ul>
</nav>